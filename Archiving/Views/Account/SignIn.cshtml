@model Archiving.Models.LoginModel

@{
    ViewData["Title"] = "SignIn";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/Auth.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <form asp-action="SignIn" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="inputForm">
                <label asp-for="Login">Введите Email</label>
                <input type="text" asp-for="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div class="inputForm">
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="inputForm">
                <input type="submit" value="Войти" class="btn" />
            </div>
        </div>
    </form>
</body>

<a class="inputForm" asp-action="Register" asp-controller="Account">Регистрация</a>